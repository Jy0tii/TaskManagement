@model IEnumerable<TaskManage>;
@{
    ViewData["Title"] = "TaskList";
}

<div class="container py-4">
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <h3 class="fw-bold">Task List</h3>
        </div>
        <div class="col-md-6 text-end">
            <form asp-action="Index" method="get" class="d-flex">
                <input type="text"
                       name="searchTerm"
                       class="form-control me-3"
                       placeholder="Search by title..." />

                <button type="submit" class="btn btn-primary me-2">
                    Search
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    Clear
                </a>
            </form>
        </div>
    </div>

    <table class="table table-hover mb-0 align-middle">
        <thead class="table-light">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Remarks</th>
                <th>Due Date</th>
                <th>Created Date</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-4">
                        No tasks found
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-semibold">@item.TaskTitle</td>
                        <td class="text-truncate" style="max-width: 200px;">@item.TaskDescription</td>
                        <td>@item.TaskStatus</td>
                        <td>@item.TaskRemarks</td>
                        <td>@item.TaskDueDate.ToString("dd MMM yyyy")</td>
                        <td>@item.CreatedOn.ToString("dd MMM yyyy")</td>
                        <td class="text-center">
                            <a asp-action="TaskDetails" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">View</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

