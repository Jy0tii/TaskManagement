@model TaskManage;
@{
    ViewData["Title"] = "TaskDetails";
}

<div class="row justify-content-center container py-2">
    <div class="col-lg-8 col-md-10">

        <div class="text-dark">
            <h3 class="mb-3 text-center">Task Details</h3>
        </div>
        <div class="row mb-3">
            <div class="col-sm-4 text-muted fw-semibold">Title</div>
            <div class="col-sm-8">@Model.TaskTitle</div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-4 text-muted fw-semibold">Description</div>
            <div class="col-sm-8">@Model.TaskDescription</div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-4 text-muted fw-semibold">Due Date</div>
            <div class="col-sm-8">@Model.TaskDueDate.ToString("dd MMM yyyy")</div>
        </div>

        <div class="row mb-4">
            <div class="col-sm-4 text-muted fw-semibold">Remarks</div>
            <div class="col-sm-8">@Model.TaskRemarks</div>
        </div>

        <div class="row mb-4">
            <div class="col-sm-4 text-muted fw-semibold">Status</div>
            <div class="col-sm-8">@Model.TaskStatus</div>
        </div>

        <div class="row mb-4">
            <div class="col-sm-4 text-muted fw-semibold">Creation Date</div>
            <div class="col-sm-8">@Model.CreatedOn.ToString("dd MMM yyyy")</div>
        </div>

        <div class="row mb-4">
            <div class="col-sm-4 text-muted fw-semibold">Created By</div>
            <div class="col-sm-8">@Model.CreatedByName</div>
        </div>

        <div class="row mb-4">
            <div class="col-sm-4 text-muted fw-semibold">Updated On Date</div>
            <div class="col-sm-8">@Model.UpdatedOn</div>
        </div>

        <div class="row mb-4">
            <div class="col-sm-4 text-muted fw-semibold">Updated By</div>
            <div class="col-sm-8">@Model.UpdatedByName</div>
        </div>

        <hr />

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            <div>
                <a asp-action="DeleteTask" asp-route-id="@Model.Id" class="btn btn-outline-primary"
                   onclick="return confirm('Are you sure you want to delete {@Model.TaskTitle} task?');">Delete</a>
                <a asp-action="EditTask" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            </div>
        </div>
    </div>
</div>
