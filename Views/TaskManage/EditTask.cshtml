@model TaskManage;
@{
    ViewData["Title"] = "EditTask";
}

<div class="row justify-content-center container py-2">
    <div class="col-lg-7 col-md-9">
        <h4 class="mb-1 text-center"> Edit Task @Model.TaskTitle</h4>
        <form method="post" asp-action="EditTask" class="needs-validation" novalidate>

            <!-- Hidden Id -->
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Title -->
            <div class="mb-3">
                <label asp-for="TaskTitle" class="form-label fw-semibold"></label>
                <input asp-for="TaskTitle" class="form-control form-control-lg" placeholder="Enter task title" />
                <span asp-validation-for="TaskTitle" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label asp-for="TaskDescription" class="form-label fw-semibold"></label>
                <textarea asp-for="TaskDescription" class="form-control" rows="3" placeholder="Describe the task"></textarea>
                <span asp-validation-for="TaskDescription" class="text-danger"></span>
            </div>

            <!-- Due Date -->
            <div class="mb-3">
                <label asp-for="TaskDueDate" class="form-label fw-semibold"></label>
                <input asp-for="TaskDueDate" type="date" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="TaskDueDate" class="text-danger"></span>
            </div>

            <!-- Remarks -->
            <div class="mb-4">
                <label asp-for="TaskRemarks" class="form-label fw-semibold"></label>
                <input asp-for="TaskRemarks" class="form-control" placeholder="Any additional remarks" />
                <span asp-validation-for="TaskRemarks" class="text-danger"></span>
            </div>

            <!-- Status -->
            <div class="mb-4">
                <label asp-for="TaskStatus" class="form-label fw-semibold"></label>
                <input asp-for="TaskStatus" class="form-control" placeholder="True or False" type="text"/>
                <span asp-validation-for="TaskStatus" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between">
                <a asp-action="TaskDetails" asp-route-id="@Model.Id" class="btn btn-outline-secondary px-4">Cancel</a>
                <button type="submit" class="btn btn-primary px-4">Update Task</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
